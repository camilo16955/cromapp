import { TestBed } from '@angular/core/testing';
import { AuthService } from '../services/auth.service';


describe('AuthService', () => {
  let service: AuthService;

  beforeEach(() => {
    TestBed.configureTestingModule({});
    service = TestBed.inject(AuthService);
  });

  it('should be created', () => {
    expect(service).toBeTruthy();
  });

  it('should return true for valid credentials', () => {
    expect(service.login('testuser', 'testpass')).toBeTrue();
  });

  it('should return false for invalid credentials', () => {
    expect(service.login('invaliduser', 'invalidpass')).toBeFalse();
  });

  it('should set isAuthenticated to true on valid login', () => {
    service.login('testuser', 'testpass');
    expect(service.isLoggedIn()).toBeTrue();
  });

  it('should set isAuthenticated to false on logout', () => {
    service.logout();
    expect(service.isLoggedIn()).toBeFalse();
  });
});
